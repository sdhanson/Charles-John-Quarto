    <h1 class="collection-title mb-3"><%=results.book.title%></h1>
    <% }%>
    <!--End title-->

    <!--Sub information-->
    <div class="mt-2 ml-1"><%=results.book.display%></div>
    <h6 class="mt-3"><a title="Shop New Collections" class="btn btn-outline-dark rounded-0 ml-1 p-1 btn-md" href="/shop" role="button">Shop</a>
            <button title="Toggle to View Works" class="button btn btn-md btn-outline-dark rounded-0 ml-1 p-1 dropdown-toggle" data-toggle="collapse" data-target="#demo1">
                Full Work List
            </button>
            <div id="demo1" class="collapse mt-2 pt-2">
                <% results.book.poems.forEach(function(work) { %>
                <div class="toggle-text"><%= work %></div>
                <% }); %>
            </div>
    <!--End sub information-->
    </h6>


    <div class="row">
        <% results.book.visible.forEach(function(poem) { %>
        <div class="card col-3 border-0 rounded-0">
            <!-- Image -->
            <img style="height: 125px; max-width: 125px;" class="rounded-circle mt-5 mx-auto" src="/images/hollywood.jpeg" alt="Photo of sunset">

            <!-- Text Content -->
            <div class="card-body mt-4 d-flex flex-column">
                <p class="card-text justify-self-center align-self-center"><%= poem.title %></p>
                <a title="View Collection" class="justify-self-center align-self-center mt-4 button-submit btn btn-md btn-outline-light rounded-0" role="button" href="<%=poem.url%>">Explore <%= poem.category %></a>
            </div>
        </div>
        <% });}%>
